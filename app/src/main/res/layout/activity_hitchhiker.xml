<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@id/drawer_layout"
    tools:context="ch.safe.safedrive.ui.hitchhiker.request.HitchhikerActivity">

    <!-- Layout to contain contents all the request for the Hitchhiker activity-->
    <FrameLayout
        android:id="@+id/flContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        />

    <!-- Container for contents of drawer. Use the Navigation View to make configuation easier -->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/activity_hitchhiker_menu_drawer_view"
        app:headerLayout="@layout/nav_header_activity_hitchhiker"
        />



</android.support.v4.widget.DrawerLayout>